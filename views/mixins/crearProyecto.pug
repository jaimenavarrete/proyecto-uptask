mixin crearProyecto(proyecto = {})
    form(action=`/nuevo-proyecto/${proyecto.id || ''}` method="post" class="agregar-proyecto")
        .campo
            label(for="nombre") Nombre Proyecto:
            input(value=proyecto.nombre type="text" id="nombre" name="nombre" placeholder="Nombre Proyecto")

        .campo.enviar
            input(type="submit" value=`${proyecto.nombre ? "Editar" : "Agregar"}` class="boton")